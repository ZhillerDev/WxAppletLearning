.user-container{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.user{
  margin: 30rpx;
  height: 240rpx;
  background-color: #DBE2EF;
  border-radius: 12rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
}
.user-avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: transparent;
  margin-left: 60rpx;
}
.unlogin{
  font-weight: bold;
  font-size: 40rpx;
  margin-left: 60rpx;
}

.btns{
  width: 100%;
}
.settings{
  height: 100rpx;
  background-color: ghostwhite;
  margin: 20rpx 30rpx;
  border-radius: 8rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
}
.settings image{
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-left: 20rpx;
}
.settings view{
  margin-left: 30rpx;
}