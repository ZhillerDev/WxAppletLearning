.index-container{
  width: 100vw;
  height: 100vh;
  
  display: flex;
  flex-direction: column;
}

/* 轮播图设置 */
.card-theme {
  --td-swiper-radius: 0;
  --td-swiper-item-padding: 0 12rpx;
  --td-swiper-nav-dot-color: #e7e7e7;
  --td-swiper-nav-dot-active-color: #0052d9;
  padding-bottom: 18px;
}
.card-theme .card-theme-nav {
  bottom: -18px;
}

/* 主体样式 */
.main-body{
  /* background-color: antiquewhite; */
  margin: 30rpx;
  min-height: 100vh;
}

/* 按钮组样式 */
.btn-group{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  /* background-color: bisque; */
}
.btn-report{
  flex: 1;
  background-color: #F9F7F7;
  height: 120rpx;
  margin-right: 20rpx;
}
.btn-report image{
  width: 80rpx;
  height: 80rpx;
}
